.checking-page {
    position: fixed;
    display: flex;
    visibility: hidden;
    flex-flow: column wrap;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    top: 0;
    opacity: 0;
    background-color: color-mod(#fff alpha(95%));
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);

    &.opened {
        visibility: visible;
        opacity: 1;
    }

    & button {
        margin-right: 0;
    }
}